generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Estado {
  Activo
  Inactivo
}

model Categoria {
  id     String @id @default(uuid())
  title  String @db.VarChar(30)
  img    String @db.VarChar(255)
  Estado Estado @default(Activo)
}
